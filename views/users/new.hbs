<div>
  <form action="/users" method="post">
    <legend>New User</legend>

    <div class="section sign-in-content">
      <div class="form-group">
        <label for="user-firstname">First Name</label>
        <input type="text" name="firstname" class="form-control" id="user-firstname" placeholder="First Name">
      </div>

      <div class="form-group">
        <label for="user-lastname">Last Name</label>
        <input type="text" name="lastname" class="form-control" id="user-lastname" placeholder="Last Name">
      </div>

      <div class="form-group">
        <label for="user-email">Email Address</label>
        <input type="text" name="email" class="form-control" id="user-email" placeholder="Email">
      </div>

      <div class="form-group">
        <label for="user-password">Password</label>
        <input type="password" name="password" class="form-control" id="user-password" placeholder="Password">
      </div>

      <div class="text-right">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
