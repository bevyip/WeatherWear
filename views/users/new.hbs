<form action="/users" method="post">

  <div class="section sign-in-content">
    <div class="back-button"><a href="/">
      <p>‚Üê Back</p>
    </a>
  </div>
    <div class="section sign-in-background">
      <h2>Sign Up</h2>
      <div class="sign-input">
        <div class="form-group">
          <label for="user-firstname">First Name</label>
          <input type="text" name="firstname" class="form-control" id="user-firstname" required minlength="1" maxlength="44" autocomplete="off" placeholder="First Name">
        </div>

        <div class="form-group">
          <label for="user-lastname">Last Name</label>
          <input type="text" name="lastname" class="form-control" id="user-lastname" required minlength="1" maxlength="44" autocomplete="off" placeholder="Last Name">
        </div>

        <div class="form-group">
          <label for="user-email">Email Address</label>
          <input type="text" name="email" class="form-control" id="user-email" required minlength="1" maxlength="44" autocomplete="off" placeholder="Email">
        </div>

        <div class="form-group">
          <label for="user-password">Password</label>
          <input type="password" name="password" class="form-control" id="user-password" required minlength="1" maxlength="44" autocomplete="off" placeholder="Password">
        </div>

        <div class="submit-button">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </div>
</form>

<div class="popup {{showMessage}}">
  {{#if showMessage}}
  <script>
  function popUp(){
    alert("Email already exists!");
  }
  popUp();
  </script>
  {{/if}}
</div>
