function setDate(){
  let fullDate = "{{dateLog.date}}";
  let splitDate = fullDate.split(" ");
  let date = splitDate[0] + " " + splitDate[1];
  let year = splitDate[2];

  document.getElementById("date").innerHTML = date;
  document.getElementById("year").innerHTML = year;
}

setDate();
