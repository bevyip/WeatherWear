<form action="/login" method="post">
  <legend>Sign in</legend>

  <div class="section sign-in-content">
    <div class="form-group">
      <label for="user-email">Email Address</label>
      <input type="text" name="email" class="form-control" id="user-email" placeholder="Email">
    </div>

    <div class="form-group">
      <label for="user-password">Password</label>
      <input type="password" name="password" class="form-control" id="user-password" placeholder="Password">
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
