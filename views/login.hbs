<form action="/login" method="post">

  <div class="section sign-in-content">
    <div class="back-button"><a href="/">
      <p>‚Üê Back</p>
    </a>
    </div>
    <div class="section sign-in-background">
      <h2>Sign In</h2>
      <div class="sign-input">
        <div class="form-group">
          <label for="user-email">Email Address</label>
          <input type="text" name="email" class="form-control" id="user-email" required minlength="1" maxlength="44" autocomplete="off" placeholder="Email">
        </div>

        <div class="form-group">
          <label for="user-password">Password</label>
          <input type="password" name="password" class="form-control" id="user-password" required minlength="1" maxlength="44" autocomplete="off" placeholder="Password">
        </div>

        <p class="sign-up-link">
          Don't have an account? <a href="/users/new">Sign up!</a>
        </p>

        <div class="submit-button">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </div>

</form>

<div class="popup {{showMessage}}">
  {{#if showMessage}}
  <script>
  function popUp(){
    alert("Incorrect Email/ Password!");
  }
  popUp();
  </script>
  {{/if}}
</div>
